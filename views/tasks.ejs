<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center text-primary">To-Do List</h2>

        <ul class="list-group mt-3">
            <% tasks.forEach(task => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/task?id=<%= task.id %>" class="text-decoration-none"><%= task.name %></a>
                    <span class="badge bg-primary">ID: <%= task.id %></span>
                </li>
            <% }) %>
        </ul>

        <div class="mt-4 text-center">
            <a href="/add-task" class="btn btn-success">Add New Task</a>
        </div>
    </div>

</body>
</html>
